---
import Photographs from '../components/Photographs.jsx';
import AsianArts from '../components/AsianArts.jsx';
import EuropeanPaintings from '../components/EuropeanPaintings.jsx';
import DrawingsPrints from '../components/DrawingsPrints.jsx';
import AmericanWing from '../components/AmericanWing.jsx';
---
<!-- The code for the main body -->
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Floor 2</title>
    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100vh;
        width: 100vw;
        overflow: hidden;
        font-family: 'Segoe UI', sans-serif;
        background-image: url('/floors.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        color: white;
        text-align: center;
      }

      .overlay {
        background-color: rgba(0, 0, 0, 0.5);
        height: 100%;
        width: 100%;
        position: relative;
        overflow: visible;
      }
      /*Code for the back button*/
      .back-button {
        position: fixed;
        top: 20px;
        right: 20px;
        background-color: #0dcaf0;
        color: #000;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        font-weight: bold;
        border-radius: 6px;
        text-decoration: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        transition: background-color 0.3s, transform 0.2s;
        z-index: 9999;
      }

      .back-button:hover {
        background-color: #0bbbe0;
        transform: scale(1.05);
      }

      .react-mount {
        position: absolute;
        z-index: 1002;
      }

      body.hide-floor-buttons .react-mount {
        display: none;
      }
    </style>
  </head>
  <body>
    <!-- Button codes -->
    <div class="overlay">
      <a href="/" class="back-button">‚Üê Back to Home</a>

      <div style="position: absolute; top: 40px; left: 40px; text-align: left;">
        <h1 style="margin: 0;">üó∫Ô∏è Floor 2</h1>
        <p style="margin: 0.5rem 0 0 0;">Click a section to explore.</p>
      </div>

      <div class="react-mount" style="top: 550px; left: 390px;">
        <Photographs client:load />
      </div>

      <div class="react-mount" style="top: 800px; left: 1150px;">
        <AsianArts client:load />
      </div>

      <div class="react-mount" style="top: 300px; left: 800px;">
        <EuropeanPaintings client:load />
      </div>

      <div class="react-mount" style="top: 500px; left: 600px;">
        <DrawingsPrints client:load />
      </div>

      <div class="react-mount" style="top: 270px; left: 1150px;">
        <AmericanWing client:load />
      </div>
    </div>
  </body>
</html>